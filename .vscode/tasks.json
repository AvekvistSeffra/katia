{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "-F",
                "app/main.py",
                "--noconsole",
                "--icon=images/katia_icon.ico"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "initialize",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-r",
                "app/requirements.txt",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
